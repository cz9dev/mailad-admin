<% const buttons=` <a href="/aliases/new" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Nuevo Alias
    </a>
    `;
    %>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Alias</th>
                    <th>Destino</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (aliases.length> 0) { %>
                    <% aliases.forEach(function(alias) { %>
                        <tr>
                            <td>
                                <%= alias.name %>
                            </td>
                            <td>
                                <%= alias.value %>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/aliases/<%= encodeURIComponent(alias.name) %>/edit"
                                        class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/aliases/<%= encodeURIComponent(alias.name) %>" method="POST"
                                        class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-outline-danger"
                                            onclick="return confirm('¿Estás seguro de eliminar este alias?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3" class="text-center">No hay aliases configurados.</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>