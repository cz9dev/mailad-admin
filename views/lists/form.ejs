<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="/lists" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a Listas
                </a>
            </div>

            <% const isEdit=typeof list.name !=='undefined' ; %>

                <form method="POST"
                    action="<%= isEdit ? `/lists/${encodeURIComponent(list.name)}?_method=PUT` : '/lists' %>">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nombre de la Lista</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    value="<%= list.name || '' %>" <%=isEdit ? 'readonly' : 'required' %>>
                                <div class="form-text">Nombre único para la lista de correo.</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="displayName" class="form-label">Nombre para Mostrar</label>
                                <input type="text" class="form-control" id="displayName" name="displayName"
                                    value="<%= list.displayName || list.name || '' %>" required>
                                <div class="form-text">Nombre descriptivo de la lista.</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email de la Lista</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    value="<%= list.mail || '' %>" required>
                                <div class="form-text">Dirección de correo de la lista.</div>
                            </div>
                        </div>
                    </div>

                    <% if (isEdit) { %>
                        <!-- Sección para Agregar Miembros -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h6 class="card-title mb-0">Agregar Miembros</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Seleccionar Usuarios para Agregar</label>
                                            <select class="form-select" id="userSelect" multiple size="8">
                                                <option value="" disabled>Cargando usuarios...</option>
                                            </select>
                                            <div class="form-text">Mantén Ctrl (Cmd en Mac) para seleccionar
                                                múltiples usuarios.</div>
                                        </div>
                                        <button type="button" class="btn btn-success" id="addSelectedUsers">
                                            <i class="bi bi-plus-circle"></i> Agregar Usuarios Seleccionados
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sección de Miembros Actuales con Botones de Eliminación -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="card-title mb-0">Miembros Actuales (<span id="memberCount">
                                                <%= list.members ? list.members.length : 0 %>
                                            </span>)</h6>
                                        <button type="button" class="btn btn-outline-danger btn-sm"
                                            id="removeSelectedMembers" style="display: none;">
                                            <i class="bi bi-trash"></i> Eliminar Seleccionados
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <% if (list.members && list.members.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-sm table-hover" id="membersTable">
                                                    <thead>
                                                        <tr>
                                                            <th width="40">
                                                                <input type="checkbox" id="selectAllMembers">
                                                            </th>
                                                            <th>Nombre</th>
                                                            <th>Email</th>
                                                            <th>Usuario</th>
                                                            <th width="100">Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% list.members.forEach(function(member, index) { %>
                                                            <tr data-member-dn="<%= member.dn %>"
                                                                data-member-email="<%= member.email %>">
                                                                <td>
                                                                    <input type="checkbox" class="member-checkbox"
                                                                        value="<%= member.email %>"
                                                                        data-member-dn="<%= member.dn %>">
                                                                </td>
                                                                <td>
                                                                    <%= member.name %>
                                                                </td>
                                                                <td>
                                                                    <%= member.email %>
                                                                </td>
                                                                <td>
                                                                    <%= member.username %>
                                                                </td>
                                                                <td>
                                                                    <button type="button"
                                                                        class="btn btn-outline-danger btn-sm remove-single-member"
                                                                        data-member-email="<%= member.email %>"
                                                                        data-member-name="<%= member.name %>">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                            <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="alert alert-info mb-0">
                                                    <i class="bi bi-info-circle"></i> Esta lista no tiene miembros
                                                    actualmente.
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Campos ocultos para enviar los cambios -->
                        <input type="hidden" name="addMembers" id="addMembersInput">
                        <input type="hidden" name="removeMembers" id="removeMembersInput">
                        <% } %>

                            <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                                <div class="alert alert-danger">
                                    <ul class="mb-0">
                                        <% errors.forEach(function(error) { %>
                                            <li>
                                                <%= error %>
                                            </li>
                                            <% }); %>
                                    </ul>
                                </div>
                                <% } %>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                        <a href="/lists" class="btn btn-secondary me-md-2">Cancelar</a>
                                        <button type="submit" class="btn btn-primary">
                                            <%= isEdit ? 'Actualizar Lista' : 'Crear Lista' %>
                                        </button>
                                    </div>
                </form>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">¿Estás seguro de que deseas eliminar estos miembros?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmRemove">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Cargar usuarios activos del LDAP
        loadActiveUsers();

        // Manejar selección/deselección de todos los miembros
        document.getElementById('selectAllMembers')?.addEventListener('change', function () {
            const checkboxes = document.querySelectorAll('.member-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            toggleRemoveButton();
        });

        // Mostrar/ocultar botón de eliminar seleccionados
        document.querySelectorAll('.member-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', toggleRemoveButton);
        });

        // Agregar usuarios seleccionados
        document.getElementById('addSelectedUsers')?.addEventListener('click', function () {
            const select = document.getElementById('userSelect');
            const selectedOptions = Array.from(select.selectedOptions);

            if (selectedOptions.length === 0) {
                alert('Por favor selecciona al menos un usuario para agregar.');
                return;
            }

            const emails = selectedOptions.map(option => option.value);
            document.getElementById('addMembersInput').value = emails.join(',');

            // Enviar el formulario automáticamente
            document.querySelector('form').submit();
        });

        // Eliminar miembros seleccionados - VERSIÓN CORREGIDA
        document.getElementById('removeSelectedMembers')?.addEventListener('click', function () {
            const selectedCheckboxes = document.querySelectorAll('.member-checkbox:checked');
            if (selectedCheckboxes.length === 0) return;

            const memberEmails = Array.from(selectedCheckboxes).map(cb => cb.value);
            const memberNames = Array.from(selectedCheckboxes).map(cb =>
                cb.closest('tr').querySelector('td:nth-child(2)').textContent.trim()
            );

            document.getElementById('confirmMessage').textContent =
                `¿Estás seguro de que deseas eliminar ${selectedCheckboxes.length} miembro(s)?\n\n${memberNames.join('\n')}`;

            const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
            confirmModal.show();

            document.getElementById('confirmRemove').onclick = function () {
                document.getElementById('removeMembersInput').value = memberEmails.join(',');
                document.querySelector('form').submit();
            };
        });

        // Eliminar miembro individual - VERSIÓN CORREGIDA
        document.querySelectorAll('.remove-single-member').forEach(button => {
            button.addEventListener('click', function () {
                const memberEmail = this.getAttribute('data-member-email');
                const memberName = this.getAttribute('data-member-name');

                document.getElementById('confirmMessage').textContent =
                    `¿Estás seguro de que deseas eliminar a "${memberName}" de la lista?`;

                const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
                confirmModal.show();

                document.getElementById('confirmRemove').onclick = function () {
                    document.getElementById('removeMembersInput').value = memberEmail;
                    document.querySelector('form').submit();
                };
            });
        });

        function toggleRemoveButton() {
            const selectedCount = document.querySelectorAll('.member-checkbox:checked').length;
            const removeButton = document.getElementById('removeSelectedMembers');
            if (removeButton) {
                removeButton.style.display = selectedCount > 0 ? 'inline-block' : 'none';
                if (selectedCount > 0) {
                    removeButton.innerHTML = `<i class="bi bi-trash"></i> Eliminar (${selectedCount})`;
                } else {
                    removeButton.innerHTML = `<i class="bi bi-trash"></i> Eliminar Seleccionados`;
                }
            }
        }

        function loadActiveUsers() {
            fetch('/users/active-users')
                .then(response => response.json())
                .then(users => {
                    const select = document.getElementById('userSelect');
                    select.innerHTML = '';

                    users.forEach(user => {
                        const option = document.createElement('option');
                        option.value = user.email;
                        option.textContent = `${user.name} (${user.email}) - ${user.username}`;
                        select.appendChild(option);
                    });

                    if (users.length === 0) {
                        const option = document.createElement('option');
                        option.value = '';
                        option.textContent = 'No hay usuarios activos disponibles';
                        option.disabled = true;
                        select.appendChild(option);
                    }
                })
                .catch(error => {
                    console.error('Error cargando usuarios:', error);
                    const select = document.getElementById('userSelect');
                    select.innerHTML = '<option value="" disabled>Error cargando usuarios</option>';
                });
        }
    });
</script>

<style>
    .member-checkbox {
        cursor: pointer;
    }

    .remove-single-member {
        padding: 0.25rem 0.5rem;
    }

    #userSelect {
        min-height: 200px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }

    .card-header {
        background-color: #f8f9fa;
    }

    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }
</style>