# Server Configuration
NODE_ENV=production
PORT=3000

# Seguridad
SESSION_SECRET=tu-super-secreto-muy-largo-y-complejo
JWT_SECRET=otro-secreto-diferente-y-largo
ALLOWED_ORIGINS=http://localhost:3000,https://tudominio.com

# MailAD Configuration
MAILAD_PATH=/usr/local/bin/mailad
POSTFIX_ALIASES_PATH=/etc/postfix/aliases
POSTFIX_BLACKLIST_PATH=/etc/postfix/rules/lista_negra
POSTFIX_TRANSPORT_PATH=/etc/postfix/transport
POSTFIX_MAIN_CF_PATH=/etc/postfix/main.cf
LDAP_CONFIG_PATH=/etc/mailad/ldap.conf
CLAMAV_CONFIG_PATH=/etc/mailad/antivirus.conf
SSL_CONFIG_PATH=/etc/mailad/ssl.conf

# LDAP/AD
LDAP_URL=ldaps://tu-servidor-ad:636
LDAP_BIND_DN=CN=mailad-admin,OU=ServiceAccounts,DC=tu-dominio,DC=com
LDAP_BIND_PASSWORD=password-segura-del-service-account
LDAP_BASE_DN=DC=tu-dominio,DC=com
LDAP_USER_ATTRIBUTE=sAMAccountName

# Grupo de administradores de MailAd
LDAP_ADMIN_GROUP=CN=MailADAdmins,OU=Groups,DC=yourdomain,DC=com

# Configuración de Caché (opcional)
CACHE_TTL=900
CACHE_CHECK_PERIOD=60

# Logs de caché (opcional)
DEBUG_CACHE=true

# Base de datos
DB_PATH=/var/lib/mailad-admin/database.sqlite

# Logs
LOG_LEVEL=warn
LOG_FILE=/var/log/mailad-admin/app.log

# Security
BCRYPT_ROUNDS=12
UPLOAD_PATH=public/uploads
MAX_FILE_SIZE=5242880

# Configuración de Rate Limiting (opcional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_LOGIN=5
RATE_LIMIT_MAX_API=100