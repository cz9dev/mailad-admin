<% const buttons=` <a href="/lists/new" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Nueva Lista
    </a>
    `;
    %>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Miembros</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (lists.length> 0) { %>
                    <% lists.forEach(function(list) { %>
                        <tr>
                            <td>
                                <%= list.name %>
                            </td>
                            <td>
                                <% if (list.members && list.members.length> 0) { %>
                                    <%= list.members.join(', ') %>
                            <% } else { %>
                                <span class="text-muted">Sin miembros</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/lists/<%= encodeURIComponent(list.name) %>/edit" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="/lists/<%= encodeURIComponent(list.name) %>" method="POST" class="d-inline">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar esta lista?')">
                                        <i class="bi bi-trash"></i>
                                        </button>
                                        </form>
    </div>
    </td>
    </tr>
    <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center">No hay listas de correo configuradas.</td>
            </tr>
            <% } %>
                </tbody>
                </table>
                </div>